<resources>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>//控件选中的颜色
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>
    <style name="view_anim">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
        <item name="@android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="splashTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_bg</item>

    </style>

    <style name="text_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="horizontal_divider_light">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_light</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="vertical_divider_light">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_light</item>
    </style>
    //fitpopwindow
    <style name="popp_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popup_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_out</item>
    </style>

    <style name="text_popup_not_interest">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_popupwindow_text_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@drawable/selector_popupwindow_text_color</item>

    </style>

</resources>
